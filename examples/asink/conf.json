{
    "tasks" : {
        "clone-asink" : {
            "command" : "git",
            "args"    : [
                "clone",
                "https://github.com/groundsix/asink"
            ]
        },
        "build-asink" : {
            "dir"     : "asink",
            "command" : "make"
        },
        "install-asink" : {
            "dir"     : "asink",
            "command" : "make",
            "args"    : [
                "install"
            ]
        },
        "clean-up" : {
            "command" : "rm",
            "args"    : [
                "-rf",
                "asink"
            ]
        }
    }
}